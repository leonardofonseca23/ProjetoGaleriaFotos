<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjetoGaleriaFotos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjetoGaleriaFotos"
    Shell.FlyoutBehavior="Disabled"
    Title="ProjetoGaleriaFotos"
    BackgroundColor="#F5F5F5"
    Shell.TitleColor="Gray"
    Shell.DisabledColor="#9E9E9E"
    Shell.ForegroundColor="White"
    Shell.TabBarBackgroundColor="#FFFFFF"
    Shell.TabBarTitleColor="#4CAF50"
    Shell.TabBarUnselectedColor="#757575">

    <ShellContent
        Title="Tela Inicial"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Postar foto"
    ContentTemplate="{DataTemplate local:AddFotos}"
    Route="AddFotos" />

</Shell>
